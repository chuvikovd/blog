{
  "name": "blog",
  "description": "personal blog",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "build:prod": "cross-env NODE_ENV=production sapper build --legacy",
    "export": "sapper export --legacy --entry \"/ /404\" && yarn fix404",
    "export:prod": "cross-env NODE_ENV=production sapper export --legacy --entry \"/ /404\" && yarn fix404",
    "fix404": "node scripts/fix404.js",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "deploy": "cross-env NODE_ENV=production yarn export && echo chuva.dev > \"__sapper__/export/CNAME\" && gh-pages -d __sapper__/export"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "date-fns": "^2.8.1",
    "gh-pages": "^2.2.0",
    "gray-matter": "^4.0.2",
    "highlight.js": "^9.18.1",
    "marked": "^4.0.10",
    "pluralize": "^8.0.0",
    "polka": "^1.0.0-next.10",
    "reading-time": "^1.2.0",
    "sirv": "^0.4.0",
    "slugify": "^1.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "cross-env": "^7.0.2",
    "cypress": "^4.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.2",
    "rollup": "^2.1.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^5.2.0",
    "sapper": "^0.27.0",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^3.3.0",
    "tailwindcss": "^1.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{css,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
